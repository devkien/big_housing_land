<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /Big_Housing_Land/

    # If request already targets the public folder, do nothing
    RewriteRule ^public/ - [L]

    # Serve existing files and directories directly
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Map common asset folders to public/ so views can use paths like /images/... or /icon/...
    RewriteRule ^(images|icon|css|js|uploads)/(.*)$ public/$1/$2 [L]

    # Rewrite everything else to public/index.php (internal)
    RewriteRule ^(.*)$ public/index.php [L,QSA]
</IfModule>

<IfModule !mod_rewrite.c>
    # Fallback: instruct user to access public/index.php directly
    ErrorDocument 404 /public/index.php
</IfModule>